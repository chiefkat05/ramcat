#version 460 core
layout(location = 0) in vec2 vertex;
layout(location = 3) in mat4 instanceTransform;
layout(location = 9) in int instanceLetter;
out vec2 TexCoords;

uniform mat4 projection;

out flat int letterID;

void main()
{
    gl_Position = projection * instanceTransform * vec4(vertex.xy, 0.0, 1.0);
    letterID = instanceLetter;
    TexCoords = vertex.xy;
    TexCoords.y = 1.0-TexCoords.y;
}